{% extends "layout.jinja2" %}

{% block content %}
<div class="card" style="width: 18rem;">
  <div class="card-body">
  <form action="/add_person" mothod="post">
    <div class="input-group mb-3">
      <div class="input-group-prepend"><span class="input-group-text">ID</span></div>
      <input id="inputId" value="{% if person is not None %}{% person.id %}" disabled type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend"><span class="input-group-text" id="inputGroup-sizing-default">Nombre</span></div>
      <input id="inputName" value="{% if person is not None %}{% person.name %}" type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend"><span class="input-group-text" id="inputGroup-sizing-default">Apellido</span></div>
      <input input="inputLastname" value="{% if person is not None %}{% person.last_name %}" type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend"><span class="input-group-text" id="inputGroup-sizing-default">Fecha de Nacimiento</span></div>
      <input id="inputBirthday" value="{% if person is not None %}{% person.birthday %}" type="date" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    
  </form> 
